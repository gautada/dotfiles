# PROMPT - This is the file that setsup starship as my default shell prompt

# From the installation instructions at https://starship.rs/guide/#ðŸš€-installation
if [[ -e "/usr/local/bin/starship" ]]; then
    # From the installation instructions at https://starship.rs/guide/#ðŸš€-installation
    # modified to be more specific
    eval "$(/usr/local/bin/starship init zsh)"
    source "${ZDOTDIR}/starship"
else
    echo "Starship is not installed, defaulting to default MacOS prompt"
    %n@%m %1~ %#
fi
