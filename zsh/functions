container-kubectl() {
 echo "FUNCTION"

 if [ -f "/usr/bin/kubectl" ] ; then
  /usr/bin/kubectl $@
 else
  if [ -f "/usr/local/bin/kubectl" ] ; then
   /usr/local/bin/kubectl $@
  fi
 fi
}



